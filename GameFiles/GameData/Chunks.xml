<?xml version="1.0" encoding="utf-8"?>

<MapChunks RootImagePath="/Images/MapChunk/">

	<MapChunk ID="DiveBar_01" NameGeneral="Bar" Zoning="Commercial" FlippableX="true" FlippableY="true" Districts="Downtown, Slums, Uptown">

		<Cells>
			<!-- Walls are automatically generated between different Cell types. -->
			<Cell X="0" Y="0" Z="0" ID="Barroom" Room="0" Zone="Patron"/>
			<Cell X="0" Y="1" Z="0" ID="BarBack" Room="0" Zone="Proprietor"/>
			<Cell X="0" Y="2" Z="0" ID="BarBack" Room="0" Zone="Proprietor"/>
			<Cell X="0" Y="3" Z="0" ID="Storeroom" Room="1" Zone="Proprietor"/>
			<Cell X="1" Y="0" Z="0" ID="Barroom" Room="0" Zone="Patron"/>
			<Cell X="1" Y="1" Z="0" ID="Barroom" Room="0" Zone="Patron"/>
			<Cell X="1" Y="2" Z="0" ID="Barroom" Room="0" Zone="Patron"/>
			<Cell X="1" Y="3" Z="0" ID="Hallway" Room="0" Zone="Patron"/>
			<Cell X="2" Y="0" Z="0" ID="Barroom" Room="0" Zone="Patron"/>
			<Cell X="2" Y="1" Z="0" ID="Barroom" Room="0" Zone="Patron"/>
			<Cell X="2" Y="2" Z="0" ID="Barroom" Room="0" Zone="Patron"/>
			<Cell X="2" Y="3" Z="0" ID="BathroomPublicUnisex" Room="2" Zone="Patron"/>
			<Cell X="0" Y="3" Z="-1" ID="Basement" Room="3" Zone="Proprietor"/>
		</Cells>

		<Gates>
			<!-- Gates like BarTop should place features into neighboring cell as well. -->
			<!-- Gate facing should always be *outwards*, if it's possible to keep that consistent. -->
			<!-- Modifiers should also be added at the chunk level, like barring windows if it's a dive bar.-->
			<Gate X="0" Y="0" Z="0" ID="Window" Facing="S"/>
			<Gate X="0" Y="1" Z="0" ID="Bartop" Facing="S" Modifiers="Gate"/>
			<Gate X="0" Y="1" Z="0" ID="Bartop" Facing="E"/>
			<Gate X="0" Y="2" Z="0" ID="Bartop" Facing="E"/>
			<Gate X="0" Y="3" Z="-1" ID="TrapDoor" Facing="A"/>
			<Gate X="0" Y="3" Z="0" ID="Door" Facing="S"/>
			<Gate X="0" Y="3" Z="0" ID="Window" Facing="N" Modifiers="High"/>
			<!-- High Windows in Basements on Z=-1 should just peek out above ground level, allowing people to climb into and out of them. -->
			<Gate X="0" Y="3" Z="-1" ID="Window" Facing="N" Modifiers="Basement"/>
			<Gate X="1" Y="0" Z="0" ID="Door" Facing="S"/>
			<Gate X="1" Y="3" Z="0" ID="Door" Facing="N"/>
			<Gate X="2" Y="0" Z="0" ID="Window" Facing="S"/>
			<Gate X="2" Y="3" Z="0" ID="Door" Facing="W"/>
			<Gate X="2" Y="3" Z="0" ID="Window" Facing="N" Modifiers="High"/>
		</Gates>

		<NPCs>
			<NPC ID="Bartender" Chance="100" Territory="Proprietor"/>"
			<!-- Patrons should be general NPCs who wander in naturally -->
		</NPCs>

	</MapChunk>

</MapChunks>